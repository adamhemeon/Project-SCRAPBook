<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".PhotoActivity">

    <TextView
        android:id="@+id/textViewSelectionHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/textViewSelectionHeader"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/photoTableView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewSelectionHeader">

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/my_button_red_background_selector"
            android:text="@string/btnCamera"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/my_button_blue_background_selector"
            android:text="@string/btnGallery"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/my_button_green_background_selector"
            android:text="@string/btnStart"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewNumPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/numPhotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout" />

    <TableLayout
        android:id="@+id/photoTableView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumPhotos">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewPhoto1"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>

            <ImageView
                android:id="@+id/imageViewPhoto2"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>

            <ImageView
                android:id="@+id/imageViewPhoto3"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewPhoto4"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>

            <ImageView
                android:id="@+id/imageViewPhoto5"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>

            <ImageView
                android:id="@+id/imageViewPhoto6"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageViewPhoto7"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>

            <ImageView
                android:id="@+id/imageViewPhoto8"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="16dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>

            <ImageView
                android:id="@+id/imageViewPhoto9"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:minHeight="100dp"
                android:maxHeight="100dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/imageViewPlayerPhoto"
                android:src="@drawable/blank_image"/>
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>