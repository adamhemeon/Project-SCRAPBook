<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSelectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewSelectionHeader"
            android:textAlignment="center"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCamera" />

        <Button
            android:id="@+id/btnGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnGallery" />

        <TextView
            android:id="@+id/textViewNumPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/?" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnStart" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewPhoto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto" />

                    <ImageView
                        android:id="@+id/imageViewPhoto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>

                    <ImageView
                        android:id="@+id/imageViewPhoto3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewPhoto4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>

                    <ImageView
                        android:id="@+id/imageViewPhoto5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>

                    <ImageView
                        android:id="@+id/imageViewPhoto6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewPhoto7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>

                    <ImageView
                        android:id="@+id/imageViewPhoto8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>

                    <ImageView
                        android:id="@+id/imageViewPhoto9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_launcher_background"
                        android:contentDescription="@string/imageViewPlayerPhoto"/>
                </TableRow>

            </TableLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>