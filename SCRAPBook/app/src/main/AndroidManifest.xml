<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nscc.capstone.scrapbook">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/scrapbook"
        android:label="@string/app_name"
        android:roundIcon="@drawable/scrapbook"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".TitleActivity"
            android:label="@string/app_name"
            android:theme="@style/splashScreenTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".SettingsActivity"
            android:label="Settings">
            <intent-filter>

                <action android:name= "SettingsActivity" />

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity android:name=".AboutActivity"
            android:label="About"
            android:screenOrientation="portrait">
            <intent-filter>

                <action android:name= "AboutActivity" />

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity android:name=".PhotoActivity"
            android:label="Photo"
            android:screenOrientation="portrait">
            <intent-filter>

                <action android:name= "PhotoActivity" />

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity android:name=".BattleActivity"
            android:label="Battle"
            android:screenOrientation="portrait">
            <intent-filter>

                <action android:name= "BattleActivity" />

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

        <activity android:name=".ScoreActivity"
            android:label="Score"
            android:screenOrientation="portrait">
            <intent-filter>

                <action android:name= "ScoreActivity" />

                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

    </application>

</manifest>